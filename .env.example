# ============================
# Application Configuration
# ============================
PORT=3100                     # The port on which the server will run
LOG_LEVEL=info                 # Logging level: debug | info | warn | error
ENABLE_SEEDERS=true            # Whether to run seeders at startup
# ============================
# Security
# ============================
JWT_SECRET=jurong2025          # Secret key used to sign JWT tokens
SESSION_SECRET=your-session-secret-here           # Very long random string used to sign session cookies
SESSION_ENCRYPTION_KEY=32-byte-hexadecimal-key    # 32-byte (64 hex chars) key for AES-256-CBC session encryption
SESSION_IV=16-byte-hexadecimal-iv                 # 16-byte (32 hex chars) initialization vector for AES-256-CBC

# ============================
# Database Configuration (Option 1: Field-Based, Recommended for Templates)
# ============================
DB_HOST=127.0.0.1              # Host address of the PostgreSQL database
DB_PORT=5432                   # Port number for the PostgreSQL server
DB_USER=postgres               # Database username
DB_PASSWORD=postgres           # Database user password
DB_NAME=postgres               # Database name

# ============================
# Database Configuration (Option 2: DATABASE_URL for SaaS like Neon)
# ============================
DATABASE_URL=postgres://username:password@host:port/dbname
# Example (Neon):
# DATABASE_URL=postgres://user:pass@ep-red-sunset-123456.us-east-2.aws.neon.tech/mydb?sslmode=require

# POSTGRESQL CONFIG
PG_POOL_MAX=50
PG_IDLE_MS=30000
PG_CONN_TIMEOUT_MS=2000

# DATABASE CONFIG
DATABASE_SSL=true

# ============================
# Redis Configuration
# ============================
REDIS_URL=rediss://default:password@central-skunk-28901.upstash.io:6379
